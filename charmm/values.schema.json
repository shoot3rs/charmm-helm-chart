{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "flow-helm-chart values",
  "description": "Schema for the values of the flow-helm-chart Helm chart.",
  "type": "object",
  "properties": {
    "deployment": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "image": {
          "type": "object",
          "properties": {
            "repository": {
              "type": "string"
            },
            "tag": {
              "oneOf": [
                { "type": "string" },
                { "type": "integer" }
              ]
            }
          }
        }
      }
    },
    "service": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        }
      }
    }
  }
}